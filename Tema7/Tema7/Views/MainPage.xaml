<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Tema7.Views"
             x:Class="Tema7.Views.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Hello, World!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Entry x:Name="nombre" />
            <Entry x:Name="apellidos" />
            <Button
                Text="Página Tabbed"
                x:Name="btn"
                Clicked="btn_Clicked"
             />
            <Button
                Text="Página 4"
                x:Name="btnP4"
                Clicked="btnP4_Clicked"
             />
            <Button
                Text="Página 5"
                x:Name="btnP5"
                Clicked="btnP5_Clicked"
             />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
