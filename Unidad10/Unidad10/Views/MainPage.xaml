<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unidad10.MainPage"
             xmlns:viewModels="clr-namespace:Unidad10.ViewModels">

    <ContentPage.BindingContext>
        <viewModels:MainPageVM></viewModels:MainPageVM>
    </ContentPage.BindingContext>

    <VerticalStackLayout
         <ListView ItemsSource="{Binding ListadoPersonas}" SelectedItem="{Binding PersonaSeleccionada}">
            
        </ListView>
        <Button Command="{Binding BuscarCommand}"></Button>
    </VerticalStackLayout>

</ContentPage>
